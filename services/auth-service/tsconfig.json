{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", /* or ESNext, since you are using type: module */
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    /* CRITICAL FIX HERE: Add "jest" to types */
    "types": [
      "node",
      "jest",
      "supertest"
    ],
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}